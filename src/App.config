<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <runtime>
    <gcAllowVeryLargeObjects enabled="true" />
  </runtime>
  <appSettings>
    <!-- The file location to read from -->
    <add key="InputFilePath" value="C:\\TweetChallenge\\tweet_input\\tweets.txt" />

    <!-- The directory to write to -->
    <add key="OutputDirectory" value="C:\\TweetChallenge\\tweet_output\\" />

    <!-- Arbitrary prefix for intermediate files -->
    <add key="OutputTempFilePrefix" value="temp" />

    <!-- Name of the output file of all words that appeared in tweets with occurrence counts -->
    <add key="OutputWordsFileName" value="ft1.txt" />

    <!-- Name of the output file of the running median of number of unique words per tweet -->
    <add key="OutputMediansFileName" value="ft2.txt" />

    <!-- Lowest possible ASCII value that we need to handle -->
    <add key="AsciiMinimumValue" value="33" />

    <!-- Highest possible ASCII value that we need to handle -->
    <add key="AsciiMaximumValue" value="127" />

    <!-- Maximum characters that can appear in a Tweet -->
    <add key="MaximumLineLength" value="140" />
    
    <!-- Whether to wait for the user to hit the enter key before exiting command prompt -->
    <add key="WaitOnExit" value="False" />

    <!-- Whether cmd.exe is available to handle file merging -->
    <add key="IsWindows" value="False" />
  </appSettings>
</configuration>